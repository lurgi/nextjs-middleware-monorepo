{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],

    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,

    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["tests", "dist", "node_modules"]
}
